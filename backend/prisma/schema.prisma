generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ngo {
  id       String     @id @default(uuid())
  name     String?
  email    String     @unique
  whatsapp String
  city     String
  uf       String
  incident Incident[]

  @@map("ngos")
}

model Incident {
  id          String  @id @default(uuid())
  title       String
  description String
  value       Decimal
  ngo         Ngo     @relation(fields: [ngoId], references: [id])
  ngoId       String

  @@map("incidents")
}
